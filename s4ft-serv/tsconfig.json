{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "s4ft"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/app/*": ["./app/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/styles/*": ["./styles/*"],
      "@/public/*": ["./public/*"],
      "@/src/*": ["./src/*"]
    },
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "s4ft-serv/dist",
    "rootDir": "."
  },
  "include": ["s4ft-env.d.ts", "**/*.ts", "**/*.tsx", "s4ft-serv/.s4ft/types/**/*.tss/**/*.ts", "src/**/*"],
  "exclude": ["node_modules", "s4ft-serv/dist", "s4ft-serv/.s4fty/_/.s4ft"]
}
